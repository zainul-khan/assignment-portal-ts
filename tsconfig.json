{
  "compilerOptions": {
    "target": "es2016",  
    "module": "commonjs",  
    "rootDir": "./src",  
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "outDir": "./dist",  
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,  
    "strict": true,  
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
